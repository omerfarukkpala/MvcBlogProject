@model IEnumerable<EntityLayer.Concrete.About>
@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Hakkımızda Sayfa Düzenlemesi</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    @using (Html.BeginForm("UpdateAbout", "About", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="card-body">
                            @foreach (var item in Model)
                            {
                                <input type="hidden" name="AboutID" class="form-control" value="@item.AboutID">
                                <div class="form-group">
                                    <label for="inputName">Görsel 1</label>
                                    <input type="file" name="AboutImage1" />
                                </div>
                                <div class="form-group">
                                    <label for="inputName">Görsel 2</label>
                                    <input type="file" name="AboutImage2" />
                                </div>
                                <div class="form-group">
                                    <label for="inputDescription">Açıklama 1</label>
                                    <textarea name="AboutContent1" class="form-control" rows="4">@item.AboutContent1</textarea>
                                </div>
                                <div class="form-group">
                                    <label for="inputDescription">Açıklama 2</label>
                                    <textarea name="AboutContent2" class="form-control" rows="4">@item.AboutContent2</textarea>
                                </div>
                            }
                            <button class="btn btn-success">Güncelle</button>
                        </div>
                    }
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
        </div>
    </section>
</body>
</html>