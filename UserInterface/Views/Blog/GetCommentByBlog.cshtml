@model IEnumerable<EntityLayer.Concrete.Comment>
@{
    ViewBag.Title = "GetCommentByBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">
                <!-- Timelime example  -->
                <div class="row">
                    <div class="col-md-12">
                        <!-- The time line -->
                        <div class="timeline">
                            @if (Model.Count() == 0)
                            {
                                <h2>Daha önce yorum yapılmamış.</h2>
                            }
                            else
                            {
                                foreach (var item in Model)
                                {
                                    <!-- timeline time label -->
                                    <div class="time-label">
                                        <span class="bg-success">@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</span>
                                    </div>
                                    <!-- /.timeline-label -->
                                    <!-- timeline item -->
                                    <div>
                                        <i class="fas fa-comment bg-yellow"></i>
                                        <div class="timeline-item">
                                            <h3 class="timeline-header"><a href="#">@item.Username</a> - @item.Mail</h3>
                                            <div class="timeline-body">
                                                @item.CommentText
                                            </div>
                                            @*<div class="timeline-footer">
                                                    <a class="btn btn-primary btn-sm">Detaylar</a>
                                                    <a class="btn btn-danger btn-sm">Kaldır</a>
                                                </div>*@
                                        </div>
                                    </div>
                                }
                            }
                            <!-- END timeline item -->
                        </div>
                    </div>
                    <!-- /.col -->
                </div>
            </div>
            <!-- /.timeline -->
        </section>
        <!-- /.content -->
    </div>
    <!-- ./wrapper -->
</body>
</html>